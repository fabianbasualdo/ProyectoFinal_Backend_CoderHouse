<h2 class="my-3">Centro de Mensajes</h2>
<form action="api/chat" method="post" id="myChat">
  <div class="mb-3">

    <input
      type="email"
      class="form-control w-25"
      id="id"
      placeholder="Email"
      required=""
    />

    <input
      type="text"
      class="form-control w-25"
      id="name"
      placeholder="Nombre"
      required=""
    />

    <input
      type="text"
      class="form-control w-25"
      id="lastname"
      placeholder="Apellido"
    />

    <input
      type="number"
      class="form-control w-25"
      id="age"
      placeholder="Edad"
    />

    <input
      type="text"
      class="form-control w-25"
      id="alias"
      placeholder="Alias"
    />

    <input
      type="text"
      class="form-control w-25"
      id="avatar"
      placeholder="URL del Avatar"
      required=""
    />

  </div>

  <input
    type="text"
    class="form-control w-25 d-inline"
    id="text"
    placeholder="Escriba el mensaje que desea enviar"
  />

  <input type="submit" class="btn btn-primary" value="Enviar" />
</form>
<hr />
<div id="messages"></div>